<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>


<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.image.ImageView?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.draobemag.mariokart.Controllers.GameBoardView">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <GridPane fx:id="gameBoard" alignment="CENTER">
        <ImageView fx:id="player1_sprite"></ImageView>
        <ImageView fx:id="player2_sprite"></ImageView>
        <ImageView fx:id="player3_sprite"></ImageView>
        <ImageView fx:id="player4_sprite"></ImageView>
    </GridPane>
    <Button fx:id="moveButton" text="Roll the dice!"/>
</VBox>