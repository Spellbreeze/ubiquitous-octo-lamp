<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.draobemag.mariokart.Controllers.GameBoardView">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <HBox fx:id="layout">
      <GridPane fx:id="gameBoard" alignment="CENTER">
          <ImageView fx:id="player1_sprite"></ImageView>
          <ImageView fx:id="player2_sprite"></ImageView>
          <ImageView fx:id="player3_sprite"></ImageView>
          <ImageView fx:id="player4_sprite"></ImageView>
      </GridPane>
        <VBox fx:id="labelBox">
            <Label fx:id="p1_speedlabel"/>
            <Label fx:id="p2_speedlabel"/>
            <Label fx:id="p3_speedlabel"/>
            <Label fx:id="p4_speedlabel"/>
        </VBox>
        <Button fx:id="moveButton" text="Roll the dice!" onAction="#movePlayer"/>
        <Button fx:id="moveFive" text="Move5Debug" onAction="#movePlayer5" visible="false"/>
    </HBox>

    <Label fx:id="diceRoll"/>
</VBox>