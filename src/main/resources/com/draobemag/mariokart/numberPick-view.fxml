<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.draobemag.mariokart.Controllers.NumberPickGameController">
        
    <Label text="Pick Number Mini Game" style="-fx-font-style: italic;"/>
    <Label text="Pick a number 1-100"/>
    <TextField fx:id="playerGuess" maxWidth="300"/>
    <Button fx:id="go" text="Go!" onAction="#check"/>
</VBox>
