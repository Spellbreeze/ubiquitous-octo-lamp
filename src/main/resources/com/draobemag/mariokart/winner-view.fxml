<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.draobemag.mariokart.Controllers.WinnerController">
    <Label fx:id="winnerName" alignment="BASELINE_LEFT"/>
    <HBox alignment="CENTER" spacing="10.0">
        <Label fx:id="player1Location" visible="false"/>
        <Label fx:id="p1Location" visible="false"/>
    </HBox>
    <HBox alignment="CENTER" spacing="10.0">
        <Label fx:id="player2Location" visible="false"/>
        <Label fx:id="p2Location" visible="false"/>
    </HBox>
    <HBox alignment="CENTER" spacing="10.0">
        <Label fx:id="player3Location"  visible="false"/>
        <Label fx:id="p3Location" visible="false"/>
    </HBox>
    <HBox alignment="CENTER" spacing="10.0">
        <Label fx:id="player4Location" visible="false"/>
        <Label fx:id="p4Location" visible="false"/>
    </HBox>
    <HBox alignment="CENTER" spacing="10.0">
        <Button fx:id="close" text="Close" onAction="#closeGame"/>
        <Button fx:id="playAgain" text="Play Again!" onAction="#playAgain"/>
    </HBox>

</VBox>